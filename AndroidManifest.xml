            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".MainMenu" android:screenOrientation="portrait"/>
        <activity android:name=".LevelManager" android:screenOrientation="portrait"/>
        <activity android:name=".screens.AboutScreen" android:screenOrientation="portrait"/>
        <activity android:name=".screens.Settings" android:screenOrientation="portrait"/>
        <activity android:name=".screens.StartGameScreen" android:screenOrientation="portrait"/>
        <activity android:name=".screens.EndGameScreen" android:screenOrientation="portrait"/>
        <activity android:name=".music.MusicManager" android:noHistory="true"/>
        
    </application>

</manifest>